{
	"compilerOptions": {
		"module": "ES2020",
		"moduleResolution": "node",
		"target": "ES2020",
		"lib": ["ES2020"],
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"esModuleInterop": true,
		"outDir": "build"
	},
	"include": ["src/**/*.ts"],

	// TODO: workaround for https://github.com/wclr/ts-node-dev/issues/265
	"ts-node": {
		"compilerOptions": {
			"module": "commonjs"
		}
	}
}
