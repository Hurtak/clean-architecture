{
	"name": "clean-architecture",
	"version": "1.0.0",
	"repository": "github:hurtak/clean-architecture",
	"license": "MIT",
	"scripts": {
		"dev": "ts-node-dev --unhandled-rejections=strict --respawn src/index.ts",
		"build": "tsc",
		"start": "NODE_ENV=production node build/index.js",
		"test": "vitest watch",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"types": "tsc --noEmit",
		"lint": "eslint --ignore-path=.gitignore --ext=.ts .",
		"format": "prettier --ignore-path=.gitignore --check .",
		"format:fix": "prettier --ignore-path=.gitignore --write .",
		"validate": "npm run types && npm run test:run && npm run lint && npm run format && npm run build"
	},
	"dependencies": {
		"@koa/router": "12.0.0",
		"config": "3.3.7",
		"koa": "2.13.4",
		"koa-bodyparser": "4.3.0",
		"sqlite": "4.1.2",
		"sqlite3": "5.0.11",
		"zod": "3.18.0"
	},
	"devDependencies": {
		"@types/config": "3.3.0",
		"@types/koa": "2.13.5",
		"@types/koa__router": "8.0.11",
		"@types/koa-bodyparser": "4.3.7",
		"@types/node": "18.7.2",
		"@types/sqlite3": "3.1.8",
		"c8": "7.12.0",
		"eslint": "8.21.0",
		"eslint-config-start": "1.1.2",
		"prettier": "2.7.1",
		"ts-node-dev": "2.0.0",
		"typescript": "4.7.4",
		"vitest": "0.21.1"
	}
}
