{
	"name": "clean-architecture",
	"version": "1.0.0",
	"repository": "github:hurtak/clean-architecture",
	"license": "MIT",
	"scripts": {
		"dev": "ts-node-dev --unhandled-rejections=strict --respawn src/index.ts",
		"build": "tsc",
		"start": "NODE_ENV=production node build/index.js",
		"test": "jest --watch",
		"validate": "npm run validate:type-check && npm run validate:test && npm run validate:lint && npm run validate:prettier",
		"validate:type-check": "tsc --noEmit",
		"validate:test": "jest",
		"validate:lint": "eslint --ignore-path=.gitignore --ext=.ts .",
		"validate:prettier": "prettier --check ."
	},
	"dependencies": {
		"@koa/router": "10.1.1",
		"config": "3.3.7",
		"koa": "2.13.4",
		"koa-bodyparser": "4.3.0",
		"sqlite": "4.0.25",
		"sqlite3": "5.0.2",
		"zod": "3.14.4"
	},
	"devDependencies": {
		"@types/config": "0.0.41",
		"@types/jest": "27.4.1",
		"@types/koa": "2.13.4",
		"@types/koa__router": "8.0.11",
		"@types/koa-bodyparser": "4.3.7",
		"@types/node": "17.0.23",
		"@types/sqlite3": "3.1.8",
		"@typescript-eslint/eslint-plugin": "5.18.0",
		"@typescript-eslint/parser": "5.18.0",
		"eslint": "8.12.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-node": "11.1.0",
		"eslint-plugin-promise": "6.0.0",
		"eslint-plugin-simple-import-sort": "7.0.0",
		"jest": "27.5.1",
		"prettier": "2.6.2",
		"ts-jest": "27.1.4",
		"ts-node-dev": "1.1.8",
		"typescript": "4.6.3"
	}
}
